{
  "name": "Python Turtle (Codespaces)",
  "image": "mcr.microsoft.com/devcontainers/python:3.9-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "webPort": "6080",
      "vncPort": "5901",
      "password": "vscode"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vsliveshare.vsliveshare"
      ],
      "settings": {
        "editor.fontSize": 16
      }
    }
  }
}
